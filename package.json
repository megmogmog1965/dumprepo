{
  "name": "dumprepo",
  "version": "0.0.2",
  "description": "Dump current directory structure/files into stdout for Claude 3.5 Project.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "dumprepo": "dist/index.js"
  },
  "scripts": {
    "dev": "npm run build && node dist/index.js",
    "build": "npm run lint && npm run tsc && npm run copyfiles",
    "lint": "eslint",
    "tsc": "tsc --build",
    "copyfiles": "copyfiles -u 1 ./files/* ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "megmogmog1965",
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.5.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.3.0"
  }
}
